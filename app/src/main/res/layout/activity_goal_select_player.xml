<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/holdstheball"
    tools:context="com.water_polo.rea.wapoch.GoalSelectPlayer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="select player"
            android:textSize="20sp"
            android:textStyle="bold"


            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"


        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:orientation="vertical"

            >

            <RadioGroup
                android:id="@+id/radioGroupGoalSelectPlayer1_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:orientation="vertical"
                        >

                        <RadioButton
                            android:id="@+id/radioButtonGoalSelectPlayer1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:onClick="radioButtonGoalSelectPlayerOnClick"
                            android:text="1"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            />

                        <RadioButton
                            android:id="@+id/radioButtonGoalSelectPlayer2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:onClick="radioButtonGoalSelectPlayerOnClick"
                            android:text="2"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                        <RadioButton
                            android:id="@+id/radioButtonGoalSelectPlayer3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:onClick="radioButtonGoalSelectPlayerOnClick"
                            android:text="3"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                        <RadioButton
                            android:id="@+id/radioButtonGoalSelectPlayer4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:onClick="radioButtonGoalSelectPlayerOnClick"
                            android:text="4"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                        <RadioButton
                            android:id="@+id/radioButtonGoalSelectPlayer5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:onClick="radioButtonGoalSelectPlayerOnClick"
                            android:text="5"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                    </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:orientation="vertical"
                    >


                    <RadioButton
                        android:id="@+id/radioButtonGoalSelectPlayer6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:onClick="radioButtonGoalSelectPlayerOnClick"
                        android:text="6"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <RadioButton
                        android:id="@+id/radioButtonGoalSelectPlayer7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:onClick="radioButtonGoalSelectPlayerOnClick"
                        android:text="7"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <RadioButton
                        android:id="@+id/radioButtonGoalSelectPlayer8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:onClick="radioButtonGoalSelectPlayerOnClick"
                        android:text="8"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <RadioButton
                        android:id="@+id/radioButtonGoalSelectPlayer9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:onClick="radioButtonGoalSelectPlayerOnClick"
                        android:text="9"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <RadioButton
                        android:id="@+id/radioButtonGoalSelectPlayer10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:onClick="radioButtonGoalSelectPlayerOnClick"
                        android:text="10"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:orientation="vertical"
                        >


                        <RadioButton
                            android:id="@+id/radioButtonGoalSelectPlayer11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:onClick="radioButtonGoalSelectPlayerOnClick"
                            android:text="11"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                        <RadioButton
                            android:id="@+id/radioButtonGoalSelectPlayer12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:onClick="radioButtonGoalSelectPlayerOnClick"
                            android:text="12"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                        <RadioButton
                            android:id="@+id/radioButtonGoalSelectPlayer13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:onClick="radioButtonGoalSelectPlayerOnClick"
                            android:text="13"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                        <RadioButton
                            android:id="@+id/radioButtonGoalSelectPlayer14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:onClick="radioButtonGoalSelectPlayerOnClick"
                            android:text="14"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                        <RadioButton
                            android:id="@+id/radioButtonGoalSelectPlayer15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:onClick="radioButtonGoalSelectPlayerOnClick"
                            android:text="15"
                            android:textStyle="bold"
                            android:textSize="20sp"/>


                    </LinearLayout>

                </LinearLayout>




            </RadioGroup>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
